{
    "extends": "@tsconfig/recommended/tsconfig.json",
    "compilerOptions": {
        "allowJs": false,
        "baseUrl": "./",
        "declaration": true,
        "esModuleInterop": false,
        "forceConsistentCasingInFileNames": true,
        "jsx": "react-jsx",
        "lib": ["dom", "dom.iterable", "es6", "es2017.object", "esnext"],
        "moduleResolution": "node",
        "noEmit": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "resolveJsonModule": true,
        "rootDir": ".",
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": false,
        "strictNullChecks": true,
        "target": "es5"
    },
    "exclude": [
        "node_modules",
        "test",
        "src/__mocks__",
        "**/*.stories.*",
        "build"
    ]
}
